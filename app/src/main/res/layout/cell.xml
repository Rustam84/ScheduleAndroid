<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pair_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="30dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/monday_first_pair_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="8:00-9:30"
            android:textColor="#5b5d60"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/monday_first_pair_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="ООП(курс)"
            android:textColor="#000000"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/monday_first_pair_lecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Латул Георгий"
            android:textColor="#000000"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/monday_first_pair_cabinet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="213a/4"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>